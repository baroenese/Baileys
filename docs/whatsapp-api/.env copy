# Baileys Implementation Configuration

# Environment
NODE_ENV="development"

# Auth & Storage
BAILEYS_AUTH_FOLDER=./auth_sessions
SESSION_STORE_TYPE=redis # file | redis
REDIS_URL=redis://:baileys_password@localhost:6379/0

# Logging
BAILEYS_LOG_LEVEL=info  # trace | debug | info | warn | error

# Connection
MAX_RECONNECT_ATTEMPTS=10
INITIAL_BACKOFF_MS=1000
MAX_BACKOFF_MS=30000

# Cache TTL (seconds)
MSG_RETRY_CACHE_TTL=3600      # 1 hour
USER_DEVICES_CACHE_TTL=300    # 5 minutes
GROUP_METADATA_CACHE_TTL=600  # 10 minutes

# Performance (Max Cache Keys)
MAX_MSG_RETRY_KEYS=10000
MAX_USER_DEVICES_KEYS=5000
MAX_GROUP_METADATA_KEYS=1000

# Features
SYNC_FULL_HISTORY=false
PRINT_QR=true
MARK_ONLINE=true
AUTO_READ_MESSAGES=true

# Browser Config
BROWSER_NAME="Baileys Bot"
BROWSER_VERSION="Production"
BROWSER_OS="1.0.0"
